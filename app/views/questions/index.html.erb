<!--  On itere sur les différentes catégorie -->
<div class="categories-cards">
  <% Category.all.each do |category| %>
      <!--  Chaque itération est une card et a une classe -->
      <div class="category-card" style="background-image: url(<%= asset_path "#{category.name.downcase}.jpeg" %>); background-size: cover;">
        <span class="category-text"><%= category.name %></span>
      </div>
  <% end %>
</div>

<div class="bg-light">
  <div class="container">


    <div class="row">
      <div class="col-6">
        <p class="sortby">Trier par
          <%= link_to "création", questions_path(query: "created_at") %>
          <%= link_to "deadline", questions_path(query: "deadline") %>
          <br>
          <%= link_to "Look", questions_path(query: "Look") %> |
          <%= link_to "Food", questions_path(query: "Food") %> |
          <%= link_to "Culture", questions_path(query: "Culture") %> |
          <%= link_to "Achats", questions_path(query: "Achats") %> |
          <%= link_to "Love", questions_path(query: "Love") %> |
          <%= link_to "Travail", questions_path(query: "Travail") %>
        </p>
        <div class="questions">
          <%= render "questions/question_cards" %>
        </div>
      </div>
    </div>

  </div>
</div>
