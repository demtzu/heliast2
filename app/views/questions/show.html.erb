<div class="container">
  <div class="indecision-card">
    <div class="top-card top-<%= @question.status %>">
      <%= @status_message%>
      <%= link_to edit_question_path(@question) do %>
        <i class="fa fa-edit"></i>
      <% end %>
      <%= link_to question_path(@question), method: :delete do%>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
    <div class="indecision-contenu text-center">
      <h4><%= @question.description %> </h4>
      <p class="text-left">Deadline: <%= @question.deadline %> </p>

      <p class="text-left">Résolution: <%= @question.type_resolution %> </p>
      <p class="text-left">Catégorie: <%= @question.category.name %> </p>
    </div>
    <div class="options">
      <% @question.options.each_with_index do |option, index| %>
        <% if option.photo.present? || option.titre.present? %>
          <div class="option option<%= option.id %>" data-optionid="<%= option.id %>">
            <% if option.photo.present? %>
              <%= cl_image_tag option.photo, crop: :fill, class: 'option-image' %>
            <% else %>
              <div class="option-image-none"></div>
            <%end%>
            <div class="option-zoom">
              <% if option.photo.present? %>
                <i class="fa fa-search-plus"></i>
              <% end %>
            </div>
            <div class="option-title">
              <%= option.titre %>
              <i class="fa fa-check hidden"></i>
            </div>
            <div class="circle"><p><%=index+1%></p></div>
          </div>
        <% end %>
      <% end %>
      <% if @answer && @answer.errors.messages.key?(:option) %>
        <p class="text-danger">Please select an option above</p>
      <% end %>
    </div>
  </div>
  <div class="indecision-card">
    <div class="answers">
      <h2>Réponses à l'indécision</h2>
      <% @question.answers.each_with_index do |answer, index| %>
        <div class="answer">
          <div class="answer-titre">
          <% if answer.user == @question.user %>
             <h3>Réponse de l'indécis</h3>
          <% else %>
            <h3>Réponse de l'Heliaste</h3>
          <% end %>
            <h4><%= answer.option.titre %></h4></br>
          </div>
          <div class="asnwer-photo">
            <% if answer.option.photo.present? %>
              <%= cl_image_tag answer.option.photo, crop: :fill, class: 'option-image' %>
            <% else %>
              <div class="answer-image-none"></div>
            <%end%>
          </div>
          <div class="answer-reponse">
            <p><%= answer.reponse %></p>
          </div>
      <% end %>
    </div>
    <% hide_answer_creation = false %>
    <% if current_user == @question.user %>
        <% hide_answer_creation = true %>
    <% end %>
    <% @question.answers.each do |answer| %>
      <% if answer.user == current_user %>
        <% hide_answer_creation = true %>
      <% end %>
    <% end %>
    <% if hide_answer_creation == false %>
      <div class="create-answer">
        <h2>Répondre à l'indécision</h2>
        <%= render "answers/new" %>
      </div>
    <% end %>
  </div>
  <% if @question.answers.present? && (@question.answers.first.created_at + 24.hours) < DateTime.now %>
    <div class="indecision-card sat-parent">
      <h2>Qu'avez-vous pensé de l'option proposée ?</h2>
      <div class="satisfaction">
        <div class="satisfied"><i class="fa fa-thumbs-up"></i></div>
        <div class="not-satisfied"><i class="fa fa-thumbs-down"></i></div>
      </div>
    </div>
  <% end %>
</div>
