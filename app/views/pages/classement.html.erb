<!-- ajouter le slider categorie ici -->
<div class="categories-cards">
  <% Category.all.each do |category| %>
      <!--  Chaque itération est une card et a une classe -->
      <div class="category-card" style="background-image: url(<%= category.photo %>); background-size: cover;">
        <span class="category-text"><%= category.name %></span>
        <%= link_to "", classement_path(query: "#{category.name}"), class: 'category-card-link' %>
      </div>
  <% end %>
</div>
<div class="col-sm-4 col-md-4 col-md-offset-4">
<div class="title">
  <% if @category.present? %>
  <h5 style="color: white; text-align: center; padding-top: 1em;">Les meilleurs Héliastes<br/>de la catégorie <%= @category.name %></h5>
  <% else %>
    <h5 style="color: white; text-align: center; padding-top: 1em;">Les meilleurs Héliastes<br/>toutes catégories confondues</h5>
  <% end %>
</div>
<% if @category.present? %>
  <div class="podium">
    <%= render "pages/podium" %>
  </div>
  <div class="list-users">
    <div class="filtres"></div>
  <!-- iterer de ici jusqu'a Y -->
    <% classement = 1 %>
    <% @users_all.each do |user| %>
      <div class="line-user">
        <h6><%= classement %></h6>
        <% classement += 1 %>
        <p class= 'avatar-bordered avatar-classement' style="background-image: url(<%= user.photo %>); background-size: cover;"></p>
        <h6><%= user.pseudo %></h6>
        <p class="tip"> <%= user.score_by_category('Food') %> pts </p>
      </div>
      <hr style="background-color: gray; height: 2px; opacity: 0.3;">
    <% end %>
    <hr style="width: 0%;">
  </div>
<% else %>
  <div class="podium">
    <%= render "pages/podium" %>
  </div>
  <div class="list-users">
    <div class="filtres"></div>
  <!-- iterer de ici jusqu'a Y -->
    <% classement = 1 %>
    <% @users.limit(10).each do |user| %>
      <div class="line-user">
        <h6><%= classement %></h6>
        <% classement += 1 %>
        <p class= 'avatar-bordered avatar-classement' style="background-image: url(<%= user.photo %>); background-size: cover;"></p>
        <h6><%= user.pseudo %></h6>
        <p class="tip"> <%= @scores[user.id] %> pts </p>
      </div>
      <hr style="background-color: gray; height: 2px; opacity: 0.3;">
    <% end %>
    <hr style="width: 0%;">
<% end %>

  <!-- Y -->


  <!-- X -->

  <hr style="width: 0%;">
</div>
</div>
